extends layout
block header
  header
    div(class="row")
      div(class="small-3 large-4 columns")
        img(src="http://www.velocitypartners.net/sites/all/themes/vpa/images/logo.png" width="50%" class="logo")
      div(class="small-9 large-4 columns")
        nav(class="top-navigation", ng-controller="navCtrl as nav")
          a(ui-sref="login", class="button radius right", ng-if="nav.$cookies.session.length <= 0") Login
          button(type="button", class="button radius right", ng-click="nav.methods.logout()", ng-if="nav.$cookies.session.length > 0") Logout
block content
  #view(ui-view)