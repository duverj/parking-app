#login
  form
    div(class="row")
      div(class="small-8 small-centered medium-5 large-4 columns")
        label Email:
          input(type="text" placeholder="enter email")
    div(class="row")
      div(class="small-8 small-centered medium-5 large-4 columns")
        label Password
          input(type="text" placeholder="enter password")
    div(class="row")
      div(class="small-8 small-centered medium-5 large-4 columns")
        div(class="row")
          div(class="small-6 columns")
            button(href="#" class="button", ng-click="login.methods.cancel()") Cancel
          div(class="small-6 columns")
            button(href="#" class="button", ng-click="login.methods.submit()") Log in