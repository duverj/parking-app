#login
  form(name="loginForm", ng-submit="loginForm.$valid")
    div(class="row")
      div(class="small-8 small-centered medium-5 large-4 columns")
        label Email:
          input(type="email", placeholder="enter email", required, ng-model="login.user.email")
    div(class="row")
      div(class="small-8 small-centered medium-5 large-4 columns")
        label Password
          input(type="text", placeholder="enter password", required, ng-model="login.user.password")
    div(class="row")
      div(class="small-8 small-centered medium-5 large-4 columns")
        div(class="row")
          div(class="small-6 columns")
            a(href="", class="button", ng-click="login.methods.cancel()") Cancel
          div(class="small-6 columns")
            button(type="submit", class="button", ng-click="login.methods.submit()") Log in