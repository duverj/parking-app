table(class="row")
  thead
    tr
      th Name
      th Plate
      th Type
      th Active
  tr(ng-repeat="slot in slots.spots")
    td {{slot.name}}
    td {{slot.plate}}
    td {{slot.type}}
    td
      div(class="switch")
        input(id="{{'switch'+ $index}}", type="checkbox", ng-checked="{{slot.active}}")
        label(for="{{'switch'+ $index}}")
