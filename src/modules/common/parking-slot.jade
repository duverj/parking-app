table(class="row")
  thead
    tr
      th Name
      th Plate
      th Type
      th Active
  tr(ng-repeat="slot in slots.spots")
    td {{slot.name}}
    td {{slot.plate}}
    td
      i(class="fa fa-car fa-2x",ng-class="{'fa-motorcycle fa-2x': slot.type === 'motorcycle'}")
    td
      div(class="switch")
        input(id="{{'switch-' + $index}}", type="checkbox")
        label(for="{{'switch-' + $index}}")
